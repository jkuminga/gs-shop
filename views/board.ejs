<h1><%= selectedbt.title %></h1>


<table class="table table-bordered border-primary">
    <thead><td>작성자</td><td>제목</td><td>날짜</td></thead> 

    <% var i = 0;
    while(i < boards.length) {%>
    <tr><td><%= boards[i].name %></td><td><a href="/board/detail/<%= boards[i].board_id %>/<%= pNum %>" style="text-decoration: none;"><%= boards[i].title%></a></td><td><%= boards[i].date %></td></tr>
    <% i++; } %>
       
</table>

<% if(boards.length == 0 ){%>
    <div>글을 작성하여 추가하세요</div>
<% } %>


<% if(cls == 'MNG' || (cls =='CST' && selectedbt.write_YN == 'Y')) { %>
<div class="d-grid gap-2 d-md-flex justify-content-md-end">
   <a href="/board/create/<%= selectedbt.type_id %>"> <button type="button" class="btn btn-info me-md-2">글쓰기</button> </a>
</div>
<% } %>


<% var j = 1;
    while (j <= totalPages) { 
        if(j == pNum){ %>
            <spanstyle="font-weight : bold;"><%=j%></span>&nbsp;&nbsp;
        <% } else { %>
            <span><a href="/board/view/<%=selectedbt.type_id%>/<%=j%>"><%=j%></a></span>&nbsp;&nbsp;
        <% } 
        j++ ;
} %>
       
