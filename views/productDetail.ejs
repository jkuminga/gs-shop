<!-- product/view에서 제품의 이미지를 클릭하면 나오는 화면 -->
<!-- root.js의 detail과 연결됨 -->

<table class="table table-bordered ">
    <tr ><td rowspan = "6"><img src="<%= product.image %>" style="width:300px;height:300px; "></td>
         <td><%= product.name%></td></tr>
    <tr> <td>가격 : <%= product.price %> 원</td></tr>
    <tr> <td>브랜드 : <%= product.brand%></td></tr>
    <tr> <td>공급업체 : <%= product.supplier %></td></tr>

    <!-- if문 추가 -->
    <% if(cls != 'NON') { %> 
    <tr><td>
        <a href="/purchase/detail/<%= product.mer_id%>" ><button class="btn btn-outline-primary btn-sm" type="submit" >구매</button></a>
        <form action = "/purchase/cart_process" method="post" style = "display : inline-block">
            <input type="hidden" value="<%= product.mer_id %>" name="mer_id">
            <input type="hidden" value="<%= loginid %>" name="loginid">
            <button class="btn btn-outline-primary btn-sm" type="submit">장바구니</button>
        </form>
        <% } %>
    </td></tr>
</table>